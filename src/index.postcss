@tailwind base;
@tailwind components;
@tailwind utilities;

html,
body,
#root {
	@apply flex flex-col h-full bg-zinc-950 text-slate-200 overflow-x-hidden;
}

#root {
	@apply container mx-auto;
}

main {
	@apply grid flex-grow gap-4 m-2 h-full overflow-y-hidden;
	grid-template-columns: minmax(0, 1fr);
	grid-template-rows: minmax(0, 1fr) minmax(0, 1fr);

	@media (min-width: 1024px) {
		& {
			grid-template-columns: minmax(0, 1fr) minmax(0, 1fr);
			grid-template-rows: minmax(0, 1fr);
		}
	}
}

.wrapper {
	@apply bg-zinc-900 flex flex-col rounded;
}

.editor {
	height: 100%;
	overflow-y: scroll;
	white-space: break-spaces;
	word-wrap: break-word;
	@apply p-4 bg-zinc-900 rounded text-lg font-mono;
	resize: none;
}

.editor:focus {
	outline: none;
}

.tabs {
	@apply bg-zinc-800 p-2 rounded;
}

.output {
	height: 100%;
	overflow-y: scroll;
	white-space: break-spaces;
	word-wrap: break-word;
	@apply p-4 bg-zinc-800 rounded flex;
}
